            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/weather_sunny"></ImageView>

        <TextView
            android:id="@+id/card1Temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="30dp"
            android:text="75"
            android:textColor="@color/whitecolor"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/card1Summary"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="Heavy Snow"
            android:textColor="@color/grayscaled"
            android:textSize="25dp"></TextView>

        <TextView
            android:id="@+id/City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="@string/random"
            android:textColor="@color/whitecolor"
            android:textSize="20dp"

            ></TextView>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/information_outline"></ImageView>

