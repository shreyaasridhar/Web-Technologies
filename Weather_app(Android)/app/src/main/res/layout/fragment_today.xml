<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.Today"
    android:background="@color/colorPrimary">

        <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        tools:context=".GridLayoutActivity" >

        <android.support.v7.widget.CardView
            android:id="@+id/button3"
            android:layout_column="0"
            app:cardBackgroundColor="#272727"
            android:layout_height="170dp"
            android:layout_width="120dp"
            app:cardCornerRadius="12dp"
            android:layout_marginLeft="10dp"
            android:layout_row="0"
            android:text="Card1"
            >

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/weather_windy"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/Windspeed"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:textSize="20dp"
                android:text="12.56 mph"
                android:textColor="@color/whitecolor"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="120dp"
                android:textSize="20dp"
                android:text="Wind Speed"
                android:textColor="@color/grayscaled"></TextView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button1"
            android:layout_column="1"
            android:layout_row="0"
            app:cardBackgroundColor="#272727"
            android:layout_height="170dp"
            app:cardCornerRadius="12dp"
            android:layout_width="120dp"
            android:layout_marginLeft="10dp"
            android:text="Card2" >
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/gauge"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/Pressure"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:textSize="20dp"
                android:text="12.56 mb"
                android:textColor="@color/whitecolor"
                ></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="120dp"
                android:textSize="20dp"
                android:text="Pressure"
                android:textColor="@color/grayscaled"></TextView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button2"
            android:layout_column="2"
            android:layout_row="0"
            app:cardBackgroundColor="#272727"
            android:layout_height="170dp"
            android:layout_width="120dp"
            android:layout_marginLeft="10dp"
            app:cardCornerRadius="12dp"
            android:layout_rowSpan="2"
            android:text="Card3" >
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/weather_pouring"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/Precipitation"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:textSize="20dp"
                android:text="12.56 mmph"
                android:textColor="@color/whitecolor"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="120dp"
                android:textSize="20dp"
                android:text="Precipitation"
                android:textColor="@color/grayscaled"></TextView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button4"
            android:layout_column="0"
            android:layout_row="1"
            app:cardBackgroundColor="#272727"
            android:layout_height="170dp"
            android:layout_width="120dp"
            app:cardCornerRadius="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_columnSpan="2"
            android:text="Card4" >
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:src="@drawable/thermometer"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/Temperature"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:textSize="20dp"
                android:text="12Â°F"
                android:textColor="@color/whitecolor"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:gravity="center"
                android:text="Temperature"
                android:textColor="@color/grayscaled"
                android:textSize="20dp"></TextView>
        </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/button5"
                android:layout_width="117dp"
                android:layout_height="167dp"
                android:layout_row="1"
                android:layout_column="1"
                app:cardCornerRadius="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Card5"
                app:cardBackgroundColor="#272727">

                <ImageView
                    android:id="@+id/todayIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/weather_windy" />

                <TextView
                    android:id="@+id/todaySummary"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="120dp"
                    android:gravity="center"
                    android:text="Clear Day"
                    android:textColor="@color/grayscaled"
                    android:textSize="20dp"></TextView>
            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button6"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#272727"
            android:layout_height="170dp"
            android:layout_width="120dp"
            android:layout_rowSpan="2"
            app:cardCornerRadius="12dp"
            android:text="Card6" >
            <ImageView
            android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/water_percent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/Humidity"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:textSize="20dp"
                android:text="56%"
                android:textColor="@color/whitecolor"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="120dp"
                android:textSize="20dp"
                android:text="Humidity"
                android:textColor="@color/grayscaled"></TextView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button7"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#272727"
            android:layout_height="170dp"
            android:layout_width="120dp"
            app:cardCornerRadius="12dp"
            android:layout_columnSpan="2"
            android:text="Card7" >
            <ImageView
            android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/eye_outline"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/Visibility"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:textSize="20dp"
                android:text="6.5 km"
                android:textColor="@color/whitecolor"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="120dp"
                android:textSize="20dp"
                android:text="Visibility"
                android:textColor="@color/grayscaled"></TextView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button8"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#272727"
            android:layout_height="170dp"
            app:cardCornerRadius="12dp"
            android:layout_width="120dp"
            android:text="Card8" >
            <ImageView
            android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/weather_fog"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/CloudCover"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:textSize="20dp"
                android:text="3%"
                android:textColor="@color/whitecolor"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="120dp"
                android:textSize="20dp"
                android:text="Cloud Cover"
                android:textColor="@color/grayscaled"></TextView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/button9"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#272727"
            android:layout_height="170dp"
            android:layout_width="120dp"
            android:layout_rowSpan="2"
            app:cardCornerRadius="12dp"
            android:text="Card9" >
            <ImageView
            android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/earth"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/Ozone"
                android:gravity="center"
                android:layout_marginTop="90dp"
                android:textSize="20dp"
                android:text="12.56 DU"
                android:textColor="@color/whitecolor"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_marginTop="120dp"
                android:textSize="20dp"
                android:text="Ozone"
                android:textColor="@color/grayscaled"></TextView>
        </android.support.v7.widget.CardView>

    </GridLayout>

</RelativeLayout>